<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonitorView.View">

	<ScrollView>
		<VerticalStackLayout
            Padding="30,0"
            Spacing="25">
			
			<Label Text="Nome do Monitor:"
						  FontSize="20" />
			<Entry x:Name="NomeEntry" Placeholder="Digite o nome do monitor" />

			<Label Text="Descrição:"
				   FontSize="20"
				   Margin="0,20,0,0" />
			<Entry x:Name="DescricaoEntry" Placeholder="Digite a descrição" />
			
			<Picker
			x:Name="nome"
			Title=" Escolha sua disciplina">
				<Picker.Items>
					<x:String>Portugues</x:String>
					<x:String>Matematica</x:String>
					<x:String>Biologia</x:String>
					<x:String>Sociologia</x:String>
					<x:String>Quimica</x:String>
					<x:String>Fisica</x:String>
				</Picker.Items>
			</Picker>
			<Button Text="Salvar"
                Clicked="OnSalvarClicked"
                HorizontalOptions="Center"
                Margin="0,20,0,0" />
		</VerticalStackLayout>
	</ScrollView>

</ContentPage>